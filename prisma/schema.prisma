generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  GERENTE
  ATENDENTE
}

model User {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String // hash da senha
  role        Role         @default(ADMIN)
  employees   Employee[]
  sections    Section[]
  actions     Action[]
  recurrences Recurrence[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Employee {
  id        String    @id @default(uuid())
  name      String
  email     String?   @unique
  role      String? // Ex: Supervisor, Operador...
  sections  Section[] @relation("SectionEmployees")
  actions   Action[]  @relation("ActionEmployees")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  userId    String
}

model Section {
  id        String     @id @default(uuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  name      String
  employees Employee[] @relation("SectionEmployees")
  actions   Action[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Action {
  id           String       @id @default(uuid())
  user         User         @relation(fields: [userId], references: [id])
  userId       String
  section      Section      @relation(fields: [sectionId], references: [id])
  sectionId    String
  title        String
  description  String?
  status       ActionStatus @default(PENDING)
  dueDate      DateTime?
  recurrence   Recurrence?  @relation(fields: [recurrenceId], references: [id])
  recurrenceId String?
  employees    Employee[]   @relation("ActionEmployees")
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Recurrence {
  id         String         @id @default(uuid())
  user       User           @relation(fields: [userId], references: [id])
  userId     String
  type       RecurrenceType
  dayOfMonth Int?
  dayOfWeek  Int?
  interval   Int?
  actions    Action[]
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}

enum ActionStatus {
  PENDING
  IN_PROGRESS
  DONE
  DELAYED
}

enum RecurrenceType {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}
